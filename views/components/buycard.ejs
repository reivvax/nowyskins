<div id="<%=item.asset_id%>" class="item-card">
    <h3><%=item.name%></h3>
    <h4><%=maps.exteriorMap[item.exterior] ? maps.exteriorMap[item.exterior] : ""%></h4>
    
    <div class="image-container">
        <img src="<%=item.icon_url.startsWith("http") ? item.icon_url : "http://cdn.steamcommunity.com/economy/image/" + item.icon_url%>" alt="<%=item.name%>">

        <div class="item-buttons">
            <a href="#" class="icon-link watchlist-link" title="Add to Watchlist">
                <img src="eye.svg" class="icon-svg" alt="Watchlist Icon">
            </a>
            <% if (item.inspect_url) { %>
                <a href="<%=item.inspect_url%>" class="icon-link inspect-link" title="Inspect">
                    <img src="magnifying-glass.svg" class="icon-svg" alt="Inspect Icon">
                </a>
            <% } %>
        </div>
    </div>

    <div class="paint-info">
        <h3 class="paint-wear"><%=item.paint_wear%></h3>
        <h3 class="paint-seed"><%=item.paint_seed%></h3>
    </div>
    
    <p>$<%=item.price%></p>
    <button class="buy-button" data-asset-id="<%=item.asset_id%>" data-seller-id="<%=item.steam_id%>">Buy</button>

    
</div>