<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sell</title>
    <link rel="stylesheet" href="basic.css">
    <link rel="stylesheet" href="cards.css">
</head>
<body>
    <%-include('./components/navbar.ejs')%>
    <div class="container">
        <h1>Your inventory</h1>
        <h2><%=items.length%> items</h2>
        <div class="inventory">
            <% items.forEach((item) => { %>
                <div class="item-card">
                    <h3><%=item.description.name%></h3>
                    <img src="<%="http://cdn.steamcommunity.com/economy/image/" + item.description.icon_url%>" alt="<%=item.description.name%>">
                    <p>$TODO PRICE</p>
                    <button class="sell-button" data-item-id="<%=item.asset_id%>">Sell</button>
                </div>
            <% }); %>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const sellButtons = document.querySelectorAll('.sell-button');
    
            sellButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const itemId = this.getAttribute('data-item-id');
                    
                    fetch('/listed_items', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ itemId: itemId })
                    })
                    .then(response => response.json())
                    .then(data => {
                        console.log('Success:', data);
                        // Optionally, you can add code here to update the UI or give feedback to the user
                    })
                    .catch((error) => {
                        console.error('Error:', error);
                    });
                });
            });
        });
    </script>
</body>
</html>