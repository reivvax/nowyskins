<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Trades</title>
</head>
<body>
    <h1>Trades</h1>
    <div>
        <button onclick="showTab('selling')">Selling</button>
        <button onclick="showTab('buying')">Buying</button>
    </div>
    <div id="selling" class="tab-content">
        <h2>Selling</h2>
        <% trades.forEach(trade => { %>
            <% if (trade.seller_id === user.steam_id) { %>
                <div class="trade">
                    <img src="<%= user.avatar %>" alt="Seller Avatar" class="avatar">
                    <p>Seller: <%= user.name %></p>
                    <img src="<%= trade.buyer_avatar %>" alt="Buyer Avatar" class="avatar">
                    <p>Buyer: <%= trade.buyer_name %></p>
                    <img src="<%= trade.item_icon %>" alt="Item Icon" class="item-icon">
                    <p>Item: <%= item_maps[trade.item_id] %></p>
                    <p>Wear: <%= trade.wear %></p>
                    <p>Paint Seed: <%= trade.paint_seed %></p>
                    <p>Price: <%= trade.price %></p>
                </div>
            <% } %>
        <% }) %>
    </div>
    <div id="buying" class="tab-content" style="display:none;">
        <h2>Buying</h2>
        <% trades.forEach(trade => { %>
            <% if (trade.buyer_id === user.steam_id) { %>
                <div class="trade">
                    <img src="<%= trade.seller_avatar %>" alt="Seller Avatar" class="avatar">
                    <p>Seller: <%= trade.seller_name %></p>
                    <img src="<%= user.avatar %>" alt="Buyer Avatar" class="avatar">
                    <p>Buyer: <%= user.name %></p>
                    <img src="<%= trade.item_icon %>" alt="Item Icon" class="item-icon">
                    <p>Item: <%= item_maps[trade.item_id] %></p>
                    <p>Wear: <%= trade.wear %></p>
                    <p>Paint Seed: <%= trade.paint_seed %></p>
                    <p>Price: <%= trade.price %></p>
                </div>
            <% } %>
        <% }) %>
    </div>
    <script>
        function showTab(tabName) {
            document.getElementById('selling').style.display = 'none';
            document.getElementById('buying').style.display = 'none';
            document.getElementById(tabName).style.display = 'block';
        }
    </script>
</body>
</html>